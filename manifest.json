{
  "name": "SnappySnippet",
  "description": "Easily extract CSS and HTML from selected element. Then send it to CodePen, jsFiddle or JS Bin with one click.",
  "version": "0.5",
  "manifest_version": 2,
  "minimum_chrome_version": "18.0",
  "icons": {
    "24": "gfx/icon_24.png",
    "128": "gfx/icon_128.png"
  },
  "browser_action": {
    "default_icon": "gfx/icon_24.png",
    "default_title": "SnappySnippet"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' https://apis.google.com https://platform.twitter.com https://www.facebook.com; object-src 'self'",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/content.css"],
      "js": ["js/tools/Snapshooter.js", "js/content.js"]
    }
  ],
  "web_accessible_resources": [
    "panel.html",
    "css/*.css",
    "css/bootstrap/css/*.css",
    "css/css/*.css",
    "css/fonts/*",
    "css/fonts/lato/*",
    "css/js/*.js",
    "js/*.js",
    "js/filters/*.js",
    "js/libs/*.js",
    "js/processors/*.js",
    "js/tools/*.js"
  ],
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ]
}
